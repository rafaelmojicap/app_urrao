<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SitiosAmpliados">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fotositioampliado"
        android:layout_width="353dp"
        android:layout_height="244dp"
        android:adjustViewBounds="true"
        android:src="@drawable/gallito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126"
        app:shapeAppearanceOverlay="@style/radius" />

    <TextView
        android:id="@+id/nombresitioampliado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva natural Jardín de Rocas"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotositioampliado"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/calificacionsitioampliado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★★★★★"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombresitioampliado"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/descripcionsitioampliado"
        android:layout_width="302dp"
        android:layout_height="133dp"
        android:text="Un espacio para contemplar al ave Gallito de las rocas (Rupicola peruvianus) en medio de su hábitat natural."
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calificacionsitioampliado"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/numerositioampliado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono: 2302275"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionsitioampliado"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/btnVerMas1"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/cornflowerblue"
        android:text="Reserva"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numerositioampliado"
        app:layout_constraintVertical_bias="0.494" />

</androidx.constraintlayout.widget.ConstraintLayout>