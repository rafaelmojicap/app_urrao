<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:background="@color/whitesmoke">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fotomoldehotel"
            android:layout_width="353dp"
            android:layout_height="244dp"
            android:adjustViewBounds="true"
            android:src="@drawable/gulupaecolodge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.126"
            app:shapeAppearanceOverlay="@style/radius" />

        <TextView
            android:id="@+id/nombrehotelmolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Gulupa Ecolodge"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotomoldehotel"
            app:layout_constraintVertical_bias="0.153" />

        <TextView
            android:id="@+id/calificacionhotelmolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★★★★★"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombrehotelmolde"
            app:layout_constraintVertical_bias="0.054" />

        <TextView
            android:id="@+id/preciohotelmolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precios a partir de\n COP 200.000\n por noche"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calificacionhotelmolde"
            app:layout_constraintVertical_bias="0.06" />

        <Button
            android:id="@+id/btnVerMas3"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/cornflowerblue"
            android:text="Ver más"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preciohotelmolde"
            app:layout_constraintVertical_bias="0.562" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>