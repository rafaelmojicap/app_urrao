<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".Home">

    <ImageView
        android:id="@+id/tituloOpc"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenOpc"
        android:layout_width="360dp"
        android:layout_height="228dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/jardin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloOpc"
        app:layout_constraintVertical_bias="0.092"
        app:shapeAppearanceOverlay="@style/radius" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="357dp"
        android:layout_height="37dp"
        android:text="Bienvenido a Urrao - Antioquia, conoce nuestros sitios turísticos, restaurantes, hoteles y mucho más."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenOpc"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/btnExplorar"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/cornflowerblue"
        android:text="Explorar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/btnRestaurantes"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/cornflowerblue"
        android:text="Restaurantes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnExplorar"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btnAlojamiento"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/cornflowerblue"
        android:text="Alojamientos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRestaurantes"
        app:layout_constraintVertical_bias="0.1" />



</androidx.constraintlayout.widget.ConstraintLayout>
